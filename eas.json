{
  "cli": {
    "version": ">=3.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "GOOGLE_SERVICE_INFO_PLIST": "${GOOGLE_SERVICE_INFO_PLIST}"
      },
      "prebuildCommand": "echo \"$GOOGLE_SERVICE_INFO_PLIST\" | base64 --decode > ios/GoogleService-Info.plist"
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "GOOGLE_SERVICE_INFO_PLIST": "${GOOGLE_SERVICE_INFO_PLIST}"
      },
      "prebuildCommand": "echo \"$GOOGLE_SERVICE_INFO_PLIST\" | base64 --decode > ios/GoogleService-Info.plist"
    },
    "production": {
      "distribution": "store",
      "env": {
        "GOOGLE_SERVICE_INFO_PLIST": "${GOOGLE_SERVICE_INFO_PLIST}"
      },
      "prebuildCommand": "echo \"$GOOGLE_SERVICE_INFO_PLIST\" | base64 --decode > ios/GoogleService-Info.plist"
    }
  }
}
